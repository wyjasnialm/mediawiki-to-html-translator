@model IndexViewModel

@{
    ViewData["Title"] = "Translacja MediaWiki do HTML";
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="Index" method="post" class="form-horizontal" role="form" enctype="multipart/form-data">
            <div class="form-group">
                <h4><label asp-for="MediaWikiText" class="control-label"></label></h4>
                <textarea asp-for="MediaWikiText" TextMode="multiline" Rows="20" class="form-control"></textarea>
                <span asp-validation-for="MediaWikiText" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <div class="col text-center">
                    <input type="submit" class="btn btn-primary" value="Zapisz"/>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        @if (Model?.Html != null)
        {
            <h4><label asp-for="Html" class="control-label"></label></h4>
            <div class="html-container">
                @Html.Raw(Model.Html)
            </div>
        }
    </div>
</div>